.container{
    display: flex;
    flex-direction: column;
}
.head-music-start{
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    /*透明度*/
    opacity: .6;
}
.head-music-stop{
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    opacity: 0;

}
.head-img{
    width: 100%;
    height: 500rpx;
}
.author-date{
    flex-direction: row;
    margin: 20rpx 0 40rpx 20rpx ;

    /*margin-left: 10rpx;*!*/
    /*margin-bottom: 10rpx;*/
}
.author-avatar{
    width: 64rpx;
    height: 64rpx;
    margin-left: 20rpx;
    vertical-align: middle;
}
.author-name{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 16rpx;
    vertical-align: middle;
    color: #999;
}
.author-action{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
    color: #999;
}
.author-replace-time{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 30rpx;
    vertical-align: middle;
    color: #999;
}
.title{
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    letter-spacing: 2px;
    color: #4b556c;
}
.tool{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.circle-img image{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
    width: 90rpx;
    height: 90rpx;
}
.share-img{
    margin-left: 30rpx;
}
.horizon{
    width: 660rpx;
    height: 2px;
    background-color: cornsilk;
    vertical-align: middle;
    /*相对,脱离文档流*/
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    /*和另外两个图片能够重叠,值设置越高,层级越高,也就越在上面*/
    z-index: -99;
}
.detail{
    color: #666;
    font-size: 26rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;

}